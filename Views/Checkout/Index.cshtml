@model AQCartMvc.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

<form asp-action="CreateStripeSession" method="post">

    <div class="mb-3">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>First Name</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Last Name</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <!-- COUPON -->
    <div class="mb-3">
        <label>Coupon code</label>
        <div class="input-group">
            <input asp-for="CouponCode" class="form-control" />
            <button type="submit"
                    name="action"
                    value="applyCoupon"
                    class="btn btn-outline-secondary">
                Apply
            </button>
        </div>
        <span asp-validation-for="CouponCode" class="text-danger"></span>
    </div>


    <div class="form-check mb-2">
        <input asp-for="RequestInvoice" class="form-check-input" />
        <label class="form-check-label">
            Request receipt (invoice)
        </label>
    </div>

   
    <div class="form-check mb-3">
        <input asp-for="AcceptPrivacy" class="form-check-input" />
        <label class="form-check-label">
            I accept the privacy policy
        </label>
        <span asp-validation-for="AcceptPrivacy" class="text-danger"></span>
    </div>

    <p><strong>Total:</strong> € @Model.Total.ToString("0.00")</p>

    @if (Model.Discount > 0)
    {
        <p class="text-success">
            Discount: -€ @Model.Discount.ToString("0.00")
        </p>
    }

    <p><strong>Final total:</strong> € @Model.FinalTotal.ToString("0.00")</p>

    <button type="submit" class="btn btn-primary">
        Pay with Stripe
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
